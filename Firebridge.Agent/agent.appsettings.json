{
  "AppName": "FireBridge",
  "DiscoveryServerPort": 47000,
  "DiscoveryServerSecret": "SECRETaa",
  "AgentServerPort": 47001,
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] <{AgentId}> <{ThreadName}> <{ThreadId}> {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/agent.log",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] <{AgentId}> <{ThreadName}> <{ThreadId}> {Message:lj} <s:{SourceContext}>{NewLine}{Exception}",
          "shared": true
        }
      }
    ],
    "Enrich": [ "WithThreadId" ]
  }
}